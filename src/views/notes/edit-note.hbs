<form action="/notes/edit-note/{{itemsNote._id}}?_method=PUT" method="POST"  class="form">
    <input type="hidden" name="_method" value="PUT">
    <h2 class="form__title">Edit note</h2>
    <input name="title" autofocus value="{{itemsNote.title}}">
    <textarea name="description">{{itemsNote.description}}</textarea>
    <button type="submit" class="btn btn-primary">
        Save
    </button>
</form>